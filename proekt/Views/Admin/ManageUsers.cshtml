@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h1>Управление пользователями</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Роли</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @* Здесь можно вывести список ролей пользователя *@
                </td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id">Изменить</a> |
                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="text-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
